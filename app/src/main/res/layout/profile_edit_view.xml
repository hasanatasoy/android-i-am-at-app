<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundWhite">


        <LinearLayout
            android:id="@+id/editprofile_1st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editprofile_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                app:srcCompat="@drawable/ic_cancel" />

            <TextView
                android:id="@+id/editprofile_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Profili Düzenle"
                android:textAlignment="viewStart" />

            <ImageView
                android:id="@+id/editprofile_done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                app:srcCompat="@drawable/ic_done" />
        </LinearLayout>

        <EditText
            android:id="@+id/cut1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/editprofile_2st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/editprofile_userImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/profildeneme"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/backgroundBlue"/>

            <TextView
                android:id="@+id/editprofile_changePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:fontFamily="@font/ubuntu"
                android:gravity="center"
                android:text="Fotoğrafı Değiştir"
                android:textColor="@color/backgroundBlue" />
        </LinearLayout>

        <EditText
            android:id="@+id/cut2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/editprofile_3st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editprofile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Kullanıcı adı"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_usernameE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Kullanıcı adı"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editprofile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Ad"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_nameE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Ad"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editprofile_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Açıklama"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_informationE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Açıklama"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editprofile_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Biyografi"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_bioE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Biyografi"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/cut3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/editprofile_4st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editprofile_secret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/ubuntu"
                android:text="Gizli Bilgiler"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/editprofile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Email"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_emailE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editprofile_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Tel no"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_telE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Tel no"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/editprofile_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/ubuntu"
                android:text="Cinsiyet"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editprofile_sexE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/ubuntu"
                android:hint="Cinsiyet"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
